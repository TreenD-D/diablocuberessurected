<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.DiabloCubeRessurected" parent="ChatSDKTheme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_1</item>
        <item name="colorPrimaryVariant">@color/dark_3</item>
        <item name="colorOnPrimary">@color/orange</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- ChatSDK -->
        <item name="colorPrimaryDark">@color/dark_3</item>
        <item name="colorAccent">@color/dark_4</item>
        <item name="colorControlNormal">@color/text_primary</item>
        <item name="actionBarBackgroundColor">@color/dark_3</item>
        <item name="systemDefaultBubbleColor">@color/grey</item>
        <item name="systemMessageTextColor">@color/white</item>
        <item name="incomingTextColor">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="incomingDefaultBubbleColor">@color/grey</item>
        <item name="outcomingDefaultBubbleColor">@color/grey</item>
        <item name="incomingDefaultBubblePressedColor">@color/chat_orange</item>
        <item name="incomingDefaultBubbleSelectedColor">@color/red</item>
        <item name="dialogTitleTextColor">@color/gold_yellow</item>
        <item name="dialogMessageTextColor">@color/white</item>



        <item name="android:colorBackground">?attr/colorPrimary</item>
        <item name="fontFamily">@font/d3_exocet</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <!-- SplashScreen theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        // Set the splash screen background, animated icon, and animation duration.
        <item name="windowSplashScreenBackground">@color/dark_1</item>

        // Use windowSplashScreenAnimatedIcon to add either a drawable or an
        // animated drawable. One of these is required.
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>


        // Set the theme of the Activity that directly follows your splash screen.
        <item name="postSplashScreenTheme">@style/Theme.DiabloCubeRessurected</item>  # Required.
    </style>



    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/red</item>
        <item name="colorOnPrimary">@color/orange</item>
        <item name="colorSurface">@color/gold_yellow</item>
        <item name="colorOnSurface">@color/orange</item>
    </style>

    <style name="WelcomeTitleStyle">
        <item name="android:textSize">55sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="WelcomeSubTitleStyle">
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="AppSubTitleStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="SettingsTitleStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="ButtonTextStyle">
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="ItemTitleStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="ItemSubTitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gold_yellow</item>
    </style>

</resources>